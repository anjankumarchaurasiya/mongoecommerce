<div class="page-header">
  <h3 class="page-title"> Category </h3>

</div>
<div class="row">
  <!-- DataTales Example -->
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Offer</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Images</th>
                <th>Reviews</th>
                <th>Status</th>
                <th>Created at</th>
              </tr>
            </thead>
            <tbody>

              <% data.forEach(function(product, index){  %>
              <tr>
                <td>
                  <%= product.name %>
                </td>
                <td>
                  <%= product.price %>
                </td>
                <td>
                  <%= product.offer.offerType +','+ product.offer.offerValue %>
                </td>
                <td>
                  <%= product.slug %>
                </td>
                <td>
                  <%=  product.category.name   %>
                </td>
                <td>
                  <a href="">images </a><%=  product.productImages.length   %>
                </td>
                <td>
                  <a href="">reviews </a><%=  product.reviews.length   %>
                </td>
                <td>
                  <%=  product.status  %>
                </td>
                <td>
                  <%= timeago(product.createdAt); %></br>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <%- paginate(current,pages); %>
      </div>
    </div>
  </div>
</div>