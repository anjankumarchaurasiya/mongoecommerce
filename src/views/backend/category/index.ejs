<div class="page-header">
  <h3 class="page-title"> Category </h3>

</div>
<div class="row">
  <!-- DataTales Example -->
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body tree">
        <% if (data.length) { %>
        <ul class="category-tree-list">
          <% } %>

          <% data.forEach(function(cat){ %>
          <li>
            <div class="icon-name-group"><%= cat.name %><span class="icon-group"><span class="btn mdi text-secondary mdi-playlist-edit"></span><span class="btn mdi mdi-delete text-secondary"></span></span>
            </div>
            <%- include('../../partials/backend/treeview', {tree: cat.children}); %>
          </li>
          <% }) %>

          <% if (data.length) { %>
        </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>